判断一个数是不是奇数
#define _CRT_SECURE_NO_WARNINGS	1
#include<stdio.h>
int main()
{
	int a;
	scanf("a=%d ",&a);        //scanf函数输入数据
	if(a%2 == 1)              //if语句条件判定
		printf("a是奇数\n");    //打印
	else
		printf("a不是奇数\n");
	return 0;
}

找出在1到100之间所有的奇数
#define _CRT_SECURE_NO_WARNINGS	1
#include<stdio.h>
int main()
{
	int i=1;          //变量初始化
	while(i<101)      //while语句进行循环
	{if(i%2 ==1)      //if语句条件判定
		printf("%d	",i);
	i++;              //变量自动加一
	}
	return 0;
}

switch语句简单练习
#define _CRT_SECURE_NO_WARNINGS	1
#include <stdio.h>
int main()
{
	int month =0;             //  变量定义并初始化
	scanf("%d",&month);       //  scanf函数输入变量
	switch(month)             //  switch语句
	{
case 3:
case 4:
case 5:
	printf("Spring\n");
	break;                    //弹出，形成分支
case 6:
case 7:
case 8:
	printf("Summer\n");
	break;
case 9:
case 10:
case 11:
	printf("Autumn\n");
	break;
case 1:
case 2:
case 12:
	printf("Winter\n");
	break;
default:
	printf("输入错误\n");
}
	return 0;
}
